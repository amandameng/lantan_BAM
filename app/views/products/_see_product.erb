<div class="popup_box">
  <h1>查看产品<a href="#" class="close">关闭</a></h1>
  <div class="popup_body">
    <div class="popup_body_area">
      <div class="seeProDiv">
        <div class="seeProDiv_l">产品编码：</div>
        <div class="seeProDiv_r"><%= @product.service_code %></div>
      </div>
      <div class="seeProDiv">
        <div class="seeProDiv_l">产品名称：</div>
        <div class="seeProDiv_r"><%=  %></div>
      </div>

      <div class="seeProDiv">
        <div class="seeProDiv_l">价格：</div>
        <div class="seeProDiv_r"><%= @product.sale_price %></div>
      </div>
      <div class="seeProDiv">
        <div class="seeProDiv_l">类别：</div>
        <div class="seeProDiv_r"><%= Product::PRODUCT_TYPES[@product.types] %></div>
      </div>
      <div class="seeProDiv">
        <div class="seeProDiv_l">配图：</div>
        <div class="seeProDiv_r"><img src="<%=@product.img_url  %>" /></div>
      </div>
      <div class="seeProDiv">
        <div class="seeProDiv_l">产品规格：</div>
        <div class="seeProDiv_r"><%= @product.standard %></div>
      </div>
      <div class="clear"></div>
      <div class="seeProDiv_p">
        <div class="seeProDiv_l">简介：</div>
        <div class="seeProDiv_r"><p><%=  %></p></div>
      </div>
      <div class="seeProDiv_p">
        <div class="seeProDiv_l">描述：</div>
        <div class="seeProDiv_r"><p>这是描述XXXXXXXXXXX</p></div>
      </div>
    </div>
    <div class="btn_box"><button class="confirm_btn">确定</button><button class="cancel_btn">取消</button></div>
  </div>
</div>