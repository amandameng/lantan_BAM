<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
  <thead>
  <tr class="hbg">
    <td>供应商名称</td>
    <td>联系人</td>
    <td>联系电话</td>
    <td>其他联系方式</td>
    <td>公司地址</td>
    <td>操作</td>
  </tr>
  </thead>
  <tbody>
  <% (@suppliers || []).each do |s| %>
      <tr>
        <td><%= s.name %></td>
        <td><%= s.contact %></td>
        <td><%= s.phone %></td>
        <td><%= s.email %></td>
