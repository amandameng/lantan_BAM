<div class="main">
    <div class="box">
         <div class="data_box">
              <div class="search">
                <input type="hidden" value="<%= @store.id %>" id="store_id"/>
                   <div>
                     <form action="/stores/<%= @store.id %>/current_month_salaries" method="get">
                     统计时间：<select name="statistics_date" id="statistics_date_select">
                       <% get_last_twelve_months.each do |month| %>
                       <option value="<%= month %>" <%= @statistics_date.eql?(month) ? "selected" : "" %>><%= month %></option>
                       <% end %>
                     </select>
                     </form>
                   </div>
                <div><%= link_to "导出EXCEL", store_current_month_salaries_path(@store, :format => 'xls') + "?statistics_date=#{@statistics_date}", :class => "search_btn" %></div>
              </div>
              <div class="clear"></div>
              <div class="data_body" id="salary_info">
                   <div>
                       <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table" id="current_month_salary_table">
                           <thead>
                                <tr class="hbg">
                                  <th><span class="sort_u_s">姓名</span></th>
                                  <th>职务</th>
                                  <th>底薪</th>
                                  <th><span class="sort_u">提成金额</span></th>
                                  <th><span class="sort_d">扣款金额</span></th>
                                  <th>总额</th>
                                  <th>操作</th>
                                </tr>
                            </thead>
                            <tbody>
                              <% @staffs.each do |staff| %>
                                <tr>
                                  <td><%= staff.name %></td>
                                  <td><%= Staff::N_COMPANY[staff.position] %></td>
                                  <td><%= staff.base_salary.to_i %></td>
                                  <% salary = staff.salaries.where("current_month = #{(@statistics_date.delete '-').to_i}").first %>
                                  <td>
                                    <span class="reward_num_text"><%= salary.reward_num unless salary.nil? %></span>
                                    <input name="" type="text" value="<%= salary.reward_num unless salary.nil? %>" class="data_input_s reward_num_input" style="display: none;"/>
                                  </td>
                                  <td>
                                    <span class="deduct_num_text"><%= salary.deduct_num unless salary.nil? %></span>
                                    <input name="" type="text" value="<%= salary.deduct_num unless salary.nil? %>" class="data_input_s deduct_num_input" style="display: none;"/>
                                  </td>
                                  <td><%= salary.total.to_i unless salary.nil? %></td>
                                  <td>
                                    <a href="javascript:void(0)" class="edit_reward_deduct_submit" style="display: none;" id="<%= salary.id unless salary.nil? %>">提交</a>
                                    <a href="javascript:void(0)" class="bz_btn">编辑</a>
                                    <%= link_to "详细", store_current_month_salary_path(@store, staff)+"?statistics_date=#{@statistics_date}" %>
                                  </td>
                                </tr>
                              <% end %>
                            </tbody>
                      </table>
                   </div>
              </div>
         </div>
    </div>
</div>
