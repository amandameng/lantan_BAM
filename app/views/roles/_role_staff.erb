<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
  <thead>
  <tr class="hbg">
    <td>姓名</td>
    <td>职务</td>
    <td>操作</td>
  </tr>
  </thead>
  <tbody>
  <% (@staffs || []).each do |staff| %>
  <tr class="<%= cycle('', 'tbg') %>">
    <td><%= staff.name %></td>
    <td><%= staff.roles.collect{|role| role.name }.join(", ") %></td>
    <td><a href="javascript:void(0);" onclick="set_staff_role('<%= staff.id %>','<%= staff.roles.collect{|role| role.id }.join(",") %>')">角色设定</a></td>
  </tr>
  <% end %>
  </tbody>
</table>
<%= will_paginate @staffs, :class => "pageTurn", :previous_label => "上一页",
            :next_label => "下一页"  unless @staffs.empty?%>