
<div class="tab_popup" style="display:none;" id="edit_staff_area">
    <div class="popup_box">
         <h1>编辑员工<a href="javascript:void(0)" class="close" id="edit_staff_close">关闭</a></h1>
         <%= form_for(@staff, :url => store_staff_path(@store, @staff), :html => {:method => :put, :multipart => true}) do |f| %>
         <div class="popup_body">
              <div class="popup_body_area">
                  <div class="item">
                       <label>名称：</label>
                       <%= f.text_field :name %>
                  </div>
                  <div class="item">
                       <label>岗位：</label>
                       <%= f.select :type_of_w, Staff::N_HEAD.invert %>
                  </div>
                  <div class="item">
                       <label>性别：</label>
                       <%= f.radio_button :sex, 0, :checked => f.object.sex ? false : true %> 男&nbsp;&nbsp;
                       <%= f.radio_button :sex, 1, :checked => f.object.sex ? true : false %> 女
                  </div>
                  <div class="item">
                       <label>等级职称：</label>
                       <%= f.select :level, Staff::LEVELS.invert %>
                  </div>
                  <div class="item">
                       <label>职务：</label>
                       <%= f.select :position, Staff::N_COMPANY.invert %>
                  </div>
                  <div class="item">
                       <label>教育程度：</label>
                       <%= f.select :education, Staff::N_EDUCATION.invert %>
                  </div>
                  <div class="item">
                       <label>出生年月：</label>
                       <%= f.date_select :birthday, {}, {:class => "ymd"} %>
                  </div>
                  <div class="item">
                       <label>联系方式：</label>
                       <%= f.text_field :phone %>
                  </div>
                  <div class="item">
                       <label>籍贯：</label>
                       <%= f.text_field :hometown %>
                  </div>
                  <div class="item">
                       <label>身份证：</label>
                       <%= f.text_field :id_card %>
                  </div>
                  <div class="item">
                       <label>民族：</label>
                       <%= f.text_field :nation %>
                  </div>
                  <div class="item">
                       <label>政治面貌：</label>
                       <%= f.text_field :political %>
                  </div>
                  <div class="item">
                       <label>地址：</label>
                       <%= f.text_field :address %>
                  </div>
                  <div class="item">
                       <label>薪资标准：</label>
                       <%= f.text_field :base_salary %>
                  </div>
                  <div class="item">
                       <label>上传照片：</label>
                       <%= f.file_field :photo, :style => "display:none;", :onchange => "ye.value=value", :id => "staff_photo" %>
                       <input name="ye" type="text" class="file" id="sale_img" />
                       <input type="button" class="file_btn" value="浏览" onclick="staff_photo.click()" />
                  </div>
                  <div class="item">
                       <label>提成起始额：</label>
                       <%= f.text_field :deduct_at %>
                  </div>
                  <div class="item">
                       <label>结束额度：</label>
                       <%= f.text_field :deduct_end %>
                  </div>
                  <div class="item">
                       <label>提成率：</label>
                       <%= f.text_field :deduct_percent %>
                  </div>
              </div>
              <div class="btn_box">
                <button class="confirm_btn" id="new_staff_btn">编辑</button>
                <button class="cancel_btn" id="edit_staff_cancel">取消</button></div>
              <div class="clear"></div>
         </div>
         <% end %>
    </div>
</div>