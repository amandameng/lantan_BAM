<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table" id="train_table">
     <thead>
          <tr class="hbg">
            <th><span class="sort_u">培训时间</span></th>
            <th>培训类别</th>
            <th>内容</th>
            <th>是否通过考核</th>
            <th>证书</th>
            <th>操作</th>
          </tr>
      </thead>
      <tbody>
        <% @trains.each do |train| %>
          <tr>
            <td><%= train.start_at.strftime("%Y.%m.%d") %> - <%= train.end_at.strftime("%Y.%m.%d") %></td>
            <td>洗车</td>
            <td><%= train.content %></td>
            <td><%=  %></td>
            <td><%= train.certificate ? "是" : "否" %></td>
            <td>操作</td>
          </tr>
        <% end %>
      </tbody>
</table>
<%= will_paginate @trains, :class => "pageTurn", :previous_label => "上一页",
    :next_label => "下一页" %>