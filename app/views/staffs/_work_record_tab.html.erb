<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
     <thead>
          <tr class="hbg">
            <td><span class="sort_u">时间</span></td>
            <td>出勤</td>
            <td>施工项目</td>
            <td>物品领用</td>
            <td>物品消耗</td>
            <td>水电消耗</td>
            <td>投诉</td>
            <td>培训</td>
            <td>提成</td>
            <td>扣款</td>
          </tr>
      </thead>
      <tbody>
        <% @work_records.each do |work_record| %>
          <tr>
            <td><%= work_record.current_day %></td>
            <td><%= work_record.attendance_num %></td>
            <td><%= work_record.construct_num %></td>
            <td><%= work_record.materials_used_num %></td>
            <td><%= work_record.materials_consume_num %></td>
            <td><%= work_record.water_num %></td>
            <td><%= work_record.complaint_num %></td>
            <td><%= work_record.train_num %></td>
            <td><%= work_record.reward_num %></td>
            <td><%= work_record.violation_num %></td>
          </tr>
        <% end %>
      </tbody>
</table>
<%= will_paginate @work_records, :class => "pageTurn", :previous_label => "上一页",
    :next_label => "下一页" %>