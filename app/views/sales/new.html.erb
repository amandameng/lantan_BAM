<div class="second_menu"><a href="/stores/<%= params[:store_id] %>/sales" <% if params[:action] == "index"  %> class="hover"<%end%>>活动列表</a>
  <a href="/stores/<%= params[:store_id] %>/sales/new" <% if params[:action] == "new"  %> class="hover"<%end%>>发布活动</a></div>
<div class="clear"></div>
<div class="data_body">
  <div>
    <%= form_for :sale,:url=>"/stores/#{params[:store_id]}/sales",:method=>:post do  %>
      <div class="releaseDiv">
        <div class="releaseDiv_l">标题：</div>
        <div class="releaseDiv_r"><input name="" type="text" class="title_input" /></div>
      </div>
      <div class="releaseDiv">
        <div class="releaseDiv_l">选择项目：</div>
        <div class="releaseDiv_r rdTop">
          <div class="search">
            <div><label>类别：</label>
              <select name="">
                <option>类别01</option>
              </select>
            </div>
            <div><label>名称：</label><input name="" type="text" /></div>
            <div><button class="search_btn">查询</button></div>
          </div>
          <fieldset class="popup_body_fieldset">
            <legend class="popup_body_title">查询结果</legend>
            <div class="popup_body_result">
              <ul>
                <li><input name="" type="checkbox" value="" />XXXXX</li>
                <li><input name="" type="checkbox" value="" />XXXXX</li>
                <li><input name="" type="checkbox" value="" />XXXXX</li>
              </ul>
            </div>
          </fieldset>
          <div class="pq"></div>
          <fieldset class="popup_body_fieldset">
            <legend class="popup_body_title">已选择</legend>
            <div class="popup_body_result">
              <div><em>XXXXX</em>
                <a href="#" class="addre_a">+</a>
                <span><input name="" type="text" class="addre_input" /></span>
                <a href="#" class="addre_a">-</a>
                <a href="#" class="remove_a">删除</a>
              </div>
            </div>
          </fieldset>

        </div>
      </div>
      <div class="releaseDiv">
        <div class="releaseDiv_l">优惠：</div>
        <div class="releaseDiv_r">
          <input name="" type="radio" value="" />金额：<input name="" type="text" />
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input name="" type="radio" value="" />打折：<input name="" type="text" />&nbsp;&nbsp;折
        </div>
      </div>
      <div class="releaseDiv">
        <div class="releaseDiv_l">优惠时间：</div>
        <div class="releaseDiv_r">
          <input name="" type="radio" value="" />日&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input name="" type="radio" value="" />周&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input name="" type="radio" value="" />月&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input name="" type="radio" value="" />年&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input name="" type="radio" value="" />有效期：<input name="" type="text" disabled />&nbsp;&nbsp;到&nbsp;&nbsp;
          <input name="" type="text" disabled />
        </div>
      </div>

      <div class="releaseDiv">
        <div class="releaseDiv_l">每辆车享受优惠次数：</div>
        <div class="releaseDiv_r"><input name="" type="text" />&nbsp;&nbsp;次</div>
      </div>

      <div class="releaseDiv">
        <div class="releaseDiv_l">本次活动车辆总数：</div>
        <div class="releaseDiv_r"><input name="" type="text" />&nbsp;&nbsp;辆</div>
      </div>

      <div class="releaseDiv">
        <div class="releaseDiv_l">活动图片：</div>
        <div class="releaseDiv_r"><input name="" type="text" class="file" />
          <button class="file_btn">浏览</button></div>
      </div>
      <div class="releaseDiv">
        <div class="releaseDiv_l">是否总店补贴：</div>
        <div class="releaseDiv_r">
          <input name="" type="radio" value="" />是&nbsp;&nbsp;<input name="" type="text" />
          &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
          <input name="" type="radio" value="" />&nbsp;&nbsp;否
        </div>
      </div>

      <div class="releaseDiv">
        <div class="releaseDiv_l">活动介绍：</div>
        <div class="releaseDiv_r">
          <textarea name="" cols="" rows=""></textarea>
        </div>
      </div>
    <% end %>
  </div>
  <div class="btn_box"><button class="confirm_btn">发布</button><button class="cancel_btn">取消</button></div>
</div>
