<%= javascript_include_tag "/assets/sales.js" %>
<div class="main">
  <div class="box">
    <div class="data_box">
      <div class="data_menu">
        <a href="/stores/<%= params[:store_id] %>/sales/new" <% if params[:action] == "new"  %> class="hover"<%end%>>发布活动</a></div>
      <div class="clear"></div>
      <div class="data_body">
        <div>
          <%= form_for @sale,:url=>"/stores/#{params[:store_id]}/sales/#{params[:id]}/update_sale",:method=>:post,:html=>{:multipart => true,:id=>"one_sale"} do  %>
            <%= render 'form' %>
          <% end %>
        </div>
        <script type="text/javascript"> $(function(){show_pic();})</script>
        <div class="btn_box"><button class="confirm_btn" type="submit" onclick="publish_sale(this)">发布</button></div>
      </div>
    </div>
  </div>
</div>
