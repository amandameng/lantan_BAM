<%render 'second_menu'%>
<div class="search">
  <div><label>时间：</label>
    <input name="" type="text" />&nbsp;到&nbsp;
    <input name="" type="text" /></div>
  <div><button class="search_btn">查询</button></div>
</div>
<div class="clear"></div>
<div class="data_body">
  <div>
    <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
      <thead>
        <tr class="hbg">
          <td>日期</td>
          <td>现金金额</td>
          <td>刷卡金额</td>
          <td>储值卡金额</td>
          <td>套餐卡金额</td>
          <td>总计</td>
        </tr>
      </thead>
      <tbody>
        <%@months.each do |k,v|%>
          <tr>
            <td><%= k %></td>
            <td><%= v[OrderPayType::PAY_TYPES[:CASH]] %></td>
            <td><%= v[OrderPayType::PAY_TYPES[:CREDIT_CARD]] %></td>
            <td><%= v[OrderPayType::PAY_TYPES[:SV_CARD]] %></td>
            <td><%= v[OrderPayType::PAY_TYPES[:PACJAGE_CARD]] %></td>
            <td><%= v.values.inject(0){|num,price|num+price} %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="amount">总计：100000</div>
  </div>
</div>
