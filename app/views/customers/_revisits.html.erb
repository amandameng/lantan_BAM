<table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
  <thead>
    <tr class="hbg">
      <td>回访时间</td>
      <td>类别</td>
      <td>回访内容</td>
      <td>客户回答</td>
      <td>相关订单</td>
    </tr>
  </thead>
  <tbody>
    <% @revisits.each do |revisit| %>
      <tr>
        <td><%= revisit.created_at.strftime("%Y-%m-%d %H:%M:%S") if revisit.created_at %></td>
        <td><%= Revisit::TYPES_NAME[revisit.types] %></td>
        <td><%= revisit.content %></td>
        <td><%= revisit.answer %></td>
        <td>
          <%= link_to "#{revisit.code}", "/orders/#{revisit.o_id}/order_info" , 
            :remote => "true", "data-type" => "script", :class => "other_a" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
<%=  will_paginate_remote(@revisits , "",
  {:url => "/stores/#{@store.id}/customers/#{@customer.id}/revisits"}) %>