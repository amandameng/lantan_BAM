<div class="main">
  <div class="box">
    <div class="data_box">
      <div class="data_menu">
        <%= link_to "新建工位", new_store_station_data_path(@store), remote: :true, "data-type" => 'script', :class =>"add_btn" %></div>
      <div class="clear"></div>
      <div class="data_body">
        <div>
          <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
            <thead>
              <tr class="hbg">
                <td>名称</td>
                <td>可施工服务</td>
                <td>操作</td>
              </tr>
            </thead>
            <tbody>
              <% @stations.each do |station| %>
                <tr>
                  <td><%= station.name %></td>
                  <td><%= station.products.map(&:name).join("、") %></td>
                  <td><%= link_to "编辑", edit_store_station_data_path(@store, station), remote: :true, "data-type" => 'script' %>
                    <%= link_to "删除", "/stores/#{@store.id}/station_datas/#{station.id}", :confirm => "Are you sure?", :method => 'delete' %>
                    </td>
                </tr>
              <% end %>

            </tbody>
          </table>
          <%= will_paginate @stations, :class => "pageTurn", :previous_label => "上一页",
            :next_label => "下一页"  unless @stations.empty?%>

        </div>
      </div>
    </div>
  </div>
</div>
<div class="mask"></div>
<div id="hidden_station_form">
  <%= render 'form' %>
</div>