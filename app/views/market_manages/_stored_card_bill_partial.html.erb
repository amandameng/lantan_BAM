<div>
   <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
       <thead>
            <tr class="hbg">
              <td>单号</td>
              <td>日期</td>
              <td>内容</td>
              <td>收入（元）</td>
              <td>支出（元）</td>
              <td>总店未支付储值卡余额（元）</td>
            </tr>
        </thead>
        <tbody>
          <% @svc_returns.each do |svc_return| %>
            <tr>
              <td>
                <%= link_to "#{svc_return.code}", "/orders/#{svc_return.types == SvcReturnRecord::TYPES[:IN] ? svc_return.o_id : svc_return.mo_id}/order_info",
                  :remote => "true", "data-type" => "script", :class => "other_a" %></td>
              <td><%= svc_return.created_at.strftime("%Y.%m.%d--%H:%M") %></td>
              <td><!--%= get_products_name(order).join(",") %--></td>
              
              <td><%= svc_return.price if svc_return.types == SvcReturnRecord::TYPES[:IN] %></td>
              <td>-<%= svc_return.price if svc_return.types == SvcReturnRecord::TYPES[:OUT] %></td>
              <td><%= svc_return.total_price %></td>
            </tr>
          <% end %>
        </tbody>
  </table>
  <div class="amount">总店未支付储值卡余额  总计：<%= @svc_returns.first.nil? ? 0 : @svc_returns.first.total_price %>（元）</div>
</div>