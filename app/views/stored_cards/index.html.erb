     <a href="#">营业额汇总表</a>
     <a href="#" class="fontSize14 hover">储值卡消费记录</a>
     <a href="/stores/<%= @store.id %>/stored_cards/daily_consumption_receipt">每日销售单据</a>
     <a href="/stores/<%= @store.id %>/stored_cards/stored_card_bill">储值卡对账单</a>
</div>
<form accept-charset="UTF-8" action="/stores/<%= @store.id %>/stored_cards" method="get">
<div class="search">
      <div><label>时间：</label>
        <input name="started_at" type="text" id="start_at" value="<%= @start_at %>" class="Wdate" readonly onClick="WdatePicker();"/>
        &nbsp;到&nbsp;<input name="ended_at" type="text" id="end_at" value="<%= @end_at %>" class="Wdate" readonly onClick="WdatePicker();"/></div>
      <div><button class="search_btn">查询</button></div>
</div>
</form>
<div class="clear"></div>

<div class="data_body">
     <div>
         <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
             <thead>
                  <tr class="hbg">
                    <td>日期</td>
                    <td>相关订单</td>
                    <td>消费内容</td>
                    <td>金额（元）</td>
                  </tr>
              </thead>
              <tbody>
                <% @orders.each do |order| %>
                  <tr>
                    <td><%= order.created_at.strftime("%Y.%m.%d--%H:%M") %></td>
                    <td><%= link_to "#{order.code}", "/orders/#{order.id}/order_info",
                        :remote => "true", "data-type" => "script" %></td>
                    <td><%= get_products_name(order).join(",") %></td>
                    <td><%= order.price %></td>
                  </tr>
                <% end %>

              </tbody>
        </table>
        <div class="amount">总计：<%= @total_price %></div>
     </div>
</div>
<div class="mask"></div>
<div id="related_order_div"></div>