<form accept-charset="UTF-8" action="/stores/<%= @store.id %>/stored_cards/stored_card_bill" method="get">
<div class="search">
      <div><label>时间：</label>
        <input name="started_at" type="text" id="start_at" value="<%= @start_at %>"/>&nbsp;到&nbsp;<input name="ended_at" id="end_at" type="text" value="<%= @end_at %>"/></div>
      <div><button class="search_btn">查询</button></div>
</div>
</form>
<div class="data_menu"><a href="#" class="add_btn">打印单据</a></div>
<div class="clear"></div>

<div class="data_body">
     <div>
         <table width="100%" border="0" cellspacing="0" cellpadding="0" class="data_table">
             <thead>
                  <tr class="hbg">
                    <td>单号</td>
                    <td>日期</td>
                    <td>内容</td>
                    <td>收入（元）</td>
                    <td>支出（元）</td>
                    <td>总店未支付储值卡余额（元）</td>
                  </tr>
              </thead>
              <tbody>
                <% @orders.each do |order| %>
                  <tr>
                    <td><a href="#" class="other_a"><%= order.code %></a></td>
                    <td><%= order.created_at.strftime("%Y.%m.%d--%H:%M") %></td>
                    <td><%= get_products_name(order).join(",") %></td>
                    <% svc_return_record = get_svc_return_record(order.id, @store.id) %>
                    <td><%= svc_return_record.total_price unless svc_return_record.nil? %></td>
                    <td>-<%= svc_return_record.price unless svc_return_record.nil? %></td>
                    <td><%= (svc_return_record.total_price - svc_return_record.price) unless svc_return_record.nil? %></td>
                  </tr>
                <% end %>
              </tbody>
        </table>
        <div class="amount">总店未支付储值卡余额  总计：<%= @total %>（元）</div>
     </div>
</div>