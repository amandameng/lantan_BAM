<!doctype html>
<html>
  <head>
    <meta charset="utf-8"/>
    <title>澜泰门店后台管理系统</title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application","kucun" %>
    <!--[if IE 6]>
    <script src="/assets/DD_belatedPNG_0.0.8a-min.js"></script>
    <script>
      DD_belatedPNG.fix('*');
    </script>
    <![endif]-->
  </head>

  <body>
    <div class="head">
      <div class="box">
        <div class="logo1">澜泰门店后台管理系统</div>
        <div class="login">你好：<%= cookies[:user_name] %> | <a href="/logout">退出</a></div>
      </div>
    </div>
    <div class="main">
      <div class="module">
        <ul>
          <li><a href="/stores/<%= params[:store_id] %>/stations" class="m_one">现场管理</a></li>
          <li><a href="/stores/<%= params[:store_id] %>/customers" class="m_two">客户管理</a></li>
          <li><a href="/stores/<%= params[:store_id] %>/materials" class="m_three">库存管理</a></li>
          <li><a href="/stores/<%= params[:store_id] %>/market_manages" class="m_four">统计管理</a></li>
          <li><a href="/stores/<%= params[:store_id] %>/sales" class="m_five">营销管理</a></li>
          <li><a href="/stores/<%= params[:store_id] %>/staffs" class="m_six">员工管理</a></li>
          <% if is_admin? %>
          <li><a href="/stores/<%= params[:store_id] %>/roles" class="m_six">基础数据</a></li>
          <% end %>
        </ul>
        <div class="clear"></div>
        <div class="message">
          <% unless @complaints.blank? %>
            有 <span class="red"><%= @complaints.size %></span> 条投诉信息需要您去处理
            <a href="/stores/<%= params[:store_id] %>/customers">点击查看</a><br/>
          <% end %>
          <% unless @notices.blank? %>
            有 <span class="red"><%= @notices.size %></span> 位客户即将过生日
            <a href="/stores/<%= params[:store_id] %>/customers">点击查看</a><br/>
          <% end %>
          <% unless @material_notices.blank? %>
            有 <span class="red"><%= @material_notices.size %></span> 条催款信息，请您及时与总部联系
            <a href="#">点击查看</a><br/>
          <% end %>
          有 <span class="red">2</span> 条订货相关信息需要您去处理<a href="#">点击查看</a>
          <span class="x">Close</span>
        </div>
      </div>
    </div>
    <div class="foot"><p>Copyright © 2013 杭州澜泰 版权所有</p></div>
  </body>
</html>